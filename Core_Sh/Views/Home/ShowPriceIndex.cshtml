        <label for="categoryFilter" class="form-label">الفئة</label>
        <select id="categoryFilter" class="form-select">
        <option value="">@Res.Choose_category</option>
        <!-- Populate categories dynamically -->
        </select>
        </div>
        <div class="col-md-4">
        <label for="familyFilter" class="form-label">النوع</label>
        <select id="familyFilter" class="form-select">
