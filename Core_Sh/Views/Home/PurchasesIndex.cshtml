                        </div>
                        <div class="col-md-6">
                            <label for="TypePay" class="form-label">@Res.TypePay</label>
                            <select id="IsCash" class="form-control _IsReturnDis">
                                <option value="0">@Res.Credit</option>
                                <option value="1">@Res.Cash</option>
                                <!-- Populate item families dynamically -->
                            </select>
                        </div>


                        <div class="col-md-4">
                            <label for="Supplier" class="form-label">@Res.Search_Supplier</label>
                            <input type="hidden" id="SupplierID" class="form-control _Clear" placeholder="@Res.Search_Supplier">
                            <input type="button" id="BtnNameSupplier" style="background-color : #c95b56; color:aliceblue" value="@Res.Search_Supplier" class="form-control _Clear _IsReturnDis" placeholder="@Res.Select">
                        </div>

                        <div class="col-md-2">
                            <label for="Add_Supp" class="form-label">____</label>
                            <input type="button" id="BtnAddSupp" style="background-color : black; color:aliceblue" value="@Res.Add_Supp" class="form-control _Clear _IsReturnDis" placeholder="@Res.Select">
